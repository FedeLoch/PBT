Class {
	#name : 'PBTInputGenerator',
	#superclass : 'Object',
	#category : 'PBT-Generators',
	#package : 'PBT',
	#tag : 'Generators'
}

{ #category : 'as yet unclassified' }
PBTInputGenerator >> genInputsFor: target from: schema [
	
	^ schema argumentConstraints collect: [ :inputConstraint | self genInstanceFor: target from: inputConstraint ]
]

{ #category : 'as yet unclassified' }
PBTInputGenerator >> genInstanceFor: target from: aConstraint [
	
	^ aConstraint gen
]

{ #category : 'as yet unclassified' }
PBTInputGenerator >> genObjectFor: target from: schema [
	
	"Consider random seeds and other strategies, not only delegate to the autogenerated generator"
	^ self genInstanceFor: target from: schema receiverConstraint
]
