Class {
	#name : 'PBTInputGenerator',
	#superclass : 'Object',
	#category : 'PBT-Input Generation',
	#package : 'PBT',
	#tag : 'Input Generation'
}

{ #category : 'as yet unclassified' }
PBTInputGenerator >> genInputsFor: target from: schema [
	
	^ schema inputConstraints collect: [ :inputConstraint | self genInstanceFor: target from: inputConstraint ]
]

{ #category : 'as yet unclassified' }
PBTInputGenerator >> genInstanceFor: target from: aConstraint [
	
	"Consider random seeds and other strategies, not only delegate to the autogenerated generator"
	^ aConstraint gen
]

{ #category : 'as yet unclassified' }
PBTInputGenerator >> genObjectFor: target from: schema [
	
	"Consider random seeds and other strategies, not only delegate to the autogenerated generator"
	^ self genInstanceFor: target from: schema objectConstraint
]
